<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="MemberMapper">


<!-- parameterType은 값을 받아야 하는 매개변수가 있는 경우 사용 -->
<insert id="join" parameterType="domain.Member">
INSERT INTO member VALUES(#{name}, #{email}, #{password})
</insert>

<delete id="deleteMember" parameterType="domain.Member">
DELETE FROM member WHERE id = #{id}
</delete>

<!-- resultType은 select 구문에서만 존재 -->
<select id="findAll" resultType="domain.Member">
SELECT * FROM member
</select>


<select id="findOne" resultType="domain.Member" 
            parameterType="java.lang.Integer">
SELECT * FROM member WHERE id = #{id}
</select>

<select id="findByName" resultType="domain.Member" 
            parameterType="String">
SELECT * FROM member WHERE name = #{name}
</select>

<update id="updateMember" parameterType="domain.Member">
UPDATE member SET name=#{name}, email=#{email}, password=#{password}
WHERE id=#{id}
</update>

</mapper>